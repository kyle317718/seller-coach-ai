{
  "name": "gemini-ai-chatbot",
  "version": "1.0.0",
  "description": "Gemini AI 챗봇 데스크톱 앱",
  "author": "Your Name",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && python main.py",
    "client": "cd client && npm start",
    "electron-dev": "concurrently \"npm run server\" \"cross-env BROWSER=none npm run client\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "cd client && npm run build",
    "electron-pack": "npm run build && electron-builder build --win --publish never"
  },
  "build": {
    "appId": "com.yourname.gemini-ai-chatbot",
    "productName": "Gemini AI 챗봇",
    "files": [
      "electron.js",
      "client/build/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  }
}
